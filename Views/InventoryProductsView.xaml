<UserControl x:Class="MyWinFormsApp.Views.InventoryProductsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid>
        <!-- Layer 1: Product List -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="40,24,40,40">
                <materialDesign:Card Padding="24" UniformCornerRadius="12">
                    <StackPanel>
                        <DockPanel Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                                <materialDesign:PackIcon Kind="PackageVariantClosed" Width="20" Height="20"
                                                          VerticalAlignment="Center" Margin="0,0,10,0" Opacity="0.7"/>
                                <TextBlock Text="Products" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" VerticalAlignment="Center"/>
                                <TextBlock x:Name="TxtCount" FontSize="12" Opacity="0.5" VerticalAlignment="Center" Margin="8,0,0,0"/>
                            </StackPanel>
                            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                    HorizontalAlignment="Right" Click="BtnAdd_Click" Height="36">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBlock Text="Add Product" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </DockPanel>

                        <TextBox x:Name="TxtSearch"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Search by name, SKU, or barcode..."
                                 materialDesign:TextFieldAssist.HasLeadingIcon="True"
                                 materialDesign:TextFieldAssist.LeadingIcon="Magnify"
                                 FontSize="14" Margin="0,0,0,16"
                                 TextChanged="TxtSearch_TextChanged"/>

                        <!-- Header -->
                        <Border BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,0,0,1" Padding="0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Product" FontWeight="SemiBold" Opacity="0.6" FontSize="12"/>
                                <TextBlock Grid.Column="1" Text="SKU" FontWeight="SemiBold" Opacity="0.6" FontSize="12"/>
                                <TextBlock Grid.Column="2" Text="Category" FontWeight="SemiBold" Opacity="0.6" FontSize="12"/>
                                <TextBlock Grid.Column="3" Text="Price" FontWeight="SemiBold" Opacity="0.6" FontSize="12" HorizontalAlignment="Right"/>
                                <TextBlock Grid.Column="4" Text="Stock" FontWeight="SemiBold" Opacity="0.6" FontSize="12" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="5" Text="Tax" FontWeight="SemiBold" Opacity="0.6" FontSize="12"/>
                            </Grid>
                        </Border>

                        <ItemsControl x:Name="ProductList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,0,0,1"
                                            Padding="0,10" Cursor="Hand" MouseLeftButtonUp="Row_Click" Tag="{Binding Id}"
                                            Background="Transparent">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="120"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Medium"/>
                                                <TextBlock Text="{Binding Description}" FontSize="11" Opacity="0.5" TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                            <TextBlock Grid.Column="1" Text="{Binding Sku}" FontSize="12" VerticalAlignment="Center" Opacity="0.7"/>
                                            <TextBlock Grid.Column="2" Text="{Binding CategoryName}" FontSize="12" VerticalAlignment="Center" Opacity="0.7"/>
                                            <TextBlock Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="14" FontWeight="SemiBold">
                                                <Run Text="{Binding SellingPrice, StringFormat={}{0:N2}}"/>
                                            </TextBlock>
                                            <TextBlock Grid.Column="4" Text="{Binding StockDisplay}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsLowStock}" Value="True">
                                                                <Setter Property="Foreground" Value="#F44336"/>
                                                                <Setter Property="FontWeight" Value="Bold"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock Grid.Column="5" Text="{Binding TaxSlabName}" FontSize="11" VerticalAlignment="Center" Opacity="0.6"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <ProgressBar x:Name="ProgressLoad" Style="{StaticResource MaterialDesignCircularProgressBar}"
                                     IsIndeterminate="True" Visibility="Collapsed" HorizontalAlignment="Center"
                                     Margin="0,20,0,0" Width="32" Height="32"/>
                        <TextBlock x:Name="TxtEmpty" Text="No products yet. Add your first product to get started."
                                   FontSize="12" Opacity="0.5" TextAlignment="Center" Margin="0,20,0,0" Visibility="Collapsed"/>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>

        <!-- Layer 2: Modal Overlay for Detail View -->
        <Grid x:Name="OverlayDetail" Visibility="Collapsed">
            <materialDesign:Card x:Name="DetailCard" MinWidth="700" Padding="32" UniformCornerRadius="16">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <DockPanel Margin="0,0,0,20">
                            <TextBlock x:Name="TxtDetailName" Style="{StaticResource MaterialDesignHeadline6TextBlock}" DockPanel.Dock="Left" VerticalAlignment="Center"/>
                            <Button Style="{StaticResource MaterialDesignIconForegroundButton}" HorizontalAlignment="Right"
                                    Click="CloseDetail_Click" Padding="4" Height="32" Width="32">
                                <materialDesign:PackIcon Kind="Close" Width="20" Height="20"/>
                            </Button>
                        </DockPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,14">
                                <TextBlock Text="SKU" FontSize="11" Opacity="0.5"/>
                                <TextBlock x:Name="TxtDetailSku" FontSize="14"/>
                            </StackPanel>
                            <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,14">
                                <TextBlock Text="Barcode" FontSize="11" Opacity="0.5"/>
                                <TextBlock x:Name="TxtDetailBarcode" FontSize="14"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,14">
                                <TextBlock Text="Category" FontSize="11" Opacity="0.5"/>
                                <TextBlock x:Name="TxtDetailCategory" FontSize="14"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,14">
                                <TextBlock Text="Unit" FontSize="11" Opacity="0.5"/>
                                <TextBlock x:Name="TxtDetailUnit" FontSize="14"/>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,14">
                                <TextBlock Text="HSN Code" FontSize="11" Opacity="0.5"/>
                                <TextBlock x:Name="TxtDetailHsn" FontSize="14"/>
                            </StackPanel>
                            <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,0,0,14">
                                <TextBlock Text="Tax" FontSize="11" Opacity="0.5"/>
                                <TextBlock x:Name="TxtDetailTax" FontSize="14"/>
                            </StackPanel>

                            <Border Grid.Row="3" Grid.ColumnSpan="3" Height="1" Background="{DynamicResource MaterialDesignDivider}" Margin="0,4,0,14"/>

                            <StackPanel Grid.Row="4" Grid.Column="0" Margin="0,0,0,14">
                                <TextBlock Text="Cost Price" FontSize="11" Opacity="0.5"/>
                                <TextBlock x:Name="TxtDetailCost" FontSize="14"/>
                            </StackPanel>
                            <StackPanel Grid.Row="4" Grid.Column="2" Margin="0,0,0,14">
                                <TextBlock Text="Selling Price" FontSize="11" Opacity="0.5"/>
                                <TextBlock x:Name="TxtDetailSelling" FontSize="16" FontWeight="Bold"/>
                            </StackPanel>

                            <StackPanel Grid.Row="5" Grid.Column="0" Margin="0,0,0,14">
                                <TextBlock Text="MRP" FontSize="11" Opacity="0.5"/>
                                <TextBlock x:Name="TxtDetailMrp" FontSize="14"/>
                            </StackPanel>
                            <StackPanel Grid.Row="5" Grid.Column="2" Margin="0,0,0,14">
                                <TextBlock Text="Current Stock" FontSize="11" Opacity="0.5"/>
                                <TextBlock x:Name="TxtDetailStock" FontSize="16" FontWeight="Bold"/>
                            </StackPanel>

                            <StackPanel Grid.Row="6" Grid.Column="0" Margin="0,0,0,14">
                                <TextBlock Text="Min Stock Level" FontSize="11" Opacity="0.5"/>
                                <TextBlock x:Name="TxtDetailMinStock" FontSize="14"/>
                            </StackPanel>
                            <StackPanel Grid.Row="6" Grid.Column="2" Margin="0,0,0,14">
                                <TextBlock Text="Status" FontSize="11" Opacity="0.5"/>
                                <TextBlock x:Name="TxtDetailStatus" FontSize="14"/>
                            </StackPanel>

                            <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,4">
                                <TextBlock Text="Description" FontSize="11" Opacity="0.5"/>
                                <TextBlock x:Name="TxtDetailDesc" FontSize="13" TextWrapping="Wrap" Opacity="0.8"/>
                            </StackPanel>
                        </Grid>

                        <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                            <Button Style="{StaticResource MaterialDesignRaisedButton}" Click="BtnDetailEdit_Click" Height="36" Margin="0,0,12,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Pencil" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                    <TextBlock Text="EDIT" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource MaterialDesignOutlinedButton}" Click="BtnDetailDelete_Click" Height="36" Foreground="#F44336"
                                    BorderBrush="#F44336">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Delete" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                    <TextBlock Text="DELETE" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </materialDesign:Card>
        </Grid>

        <!-- Layer 3: Modal Overlay for Add/Edit -->
        <Grid x:Name="OverlayEdit" Visibility="Collapsed">
            <materialDesign:Card x:Name="EditCard" MinWidth="750" Padding="32" UniformCornerRadius="16">
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="650">
                    <StackPanel>
                        <DockPanel Margin="0,0,0,16">
                            <TextBlock x:Name="TxtEditTitle" Text="Add Product"
                                       Style="{StaticResource MaterialDesignHeadline6TextBlock}" DockPanel.Dock="Left"/>
                            <Button Style="{StaticResource MaterialDesignIconForegroundButton}" HorizontalAlignment="Right"
                                    Click="BtnCancel_Click" Padding="4" Height="32" Width="32">
                                <materialDesign:PackIcon Kind="Close" Width="20" Height="20"/>
                            </Button>
                        </DockPanel>

                        <!-- Basic Info -->
                        <TextBlock Text="BASIC INFORMATION" FontSize="11" FontWeight="SemiBold" Opacity="0.5" Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBox x:Name="TxtName" Grid.Row="0" Grid.Column="0" Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:HintAssist.Hint="Product Name *" FontSize="14" Margin="0,0,0,12"/>
                            <TextBox x:Name="TxtSku" Grid.Row="0" Grid.Column="2" Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:HintAssist.Hint="SKU" FontSize="14" Margin="0,0,0,12"/>
                            <TextBox x:Name="TxtBarcode" Grid.Row="1" Grid.Column="0" Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:HintAssist.Hint="Barcode" FontSize="14" Margin="0,0,0,12"/>
                            <TextBox x:Name="TxtHsnCode" Grid.Row="1" Grid.Column="2" Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:HintAssist.Hint="HSN Code" FontSize="14" Margin="0,0,0,12"/>
                            <ComboBox x:Name="CmbCategory" Grid.Row="2" Grid.Column="0" Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                      materialDesign:HintAssist.Hint="Category" FontSize="14" Margin="0,0,0,12" DisplayMemberPath="Name" SelectedValuePath="Id"/>
                            <ComboBox x:Name="CmbUnit" Grid.Row="2" Grid.Column="2" Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                      materialDesign:HintAssist.Hint="Unit" FontSize="14" Margin="0,0,0,12" DisplayMemberPath="DisplayName" SelectedValuePath="Id"/>
                        </Grid>

                        <TextBox x:Name="TxtDescription" Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Description (optional)" FontSize="14" Margin="0,0,0,16"
                                 TextWrapping="Wrap" MinHeight="50" AcceptsReturn="True"/>

                        <!-- Pricing -->
                        <TextBlock Text="PRICING" FontSize="11" FontWeight="SemiBold" Opacity="0.5" Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="TxtCostPrice" Grid.Column="0" Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:HintAssist.Hint="Cost Price" FontSize="14" Margin="0,0,0,12"/>
                            <TextBox x:Name="TxtSellingPrice" Grid.Column="2" Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:HintAssist.Hint="Selling Price *" FontSize="14" Margin="0,0,0,12"/>
                            <TextBox x:Name="TxtMrp" Grid.Column="4" Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:HintAssist.Hint="MRP" FontSize="14" Margin="0,0,0,12"/>
                        </Grid>

                        <!-- Tax & Stock -->
                        <TextBlock Text="TAX &amp; STOCK" FontSize="11" FontWeight="SemiBold" Opacity="0.5" Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox x:Name="CmbTaxSlab" Grid.Column="0" Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                      materialDesign:HintAssist.Hint="Tax Slab" FontSize="14" Margin="0,0,0,12" DisplayMemberPath="TaxName" SelectedValuePath="Id"/>
                            <TextBox x:Name="TxtCurrentStock" Grid.Column="2" Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:HintAssist.Hint="Opening Stock" FontSize="14" Margin="0,0,0,12"/>
                            <TextBox x:Name="TxtMinStock" Grid.Column="4" Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:HintAssist.Hint="Min Stock Level" FontSize="14" Margin="0,0,0,12"/>
                        </Grid>

                        <CheckBox x:Name="ChkIsActive" Content="Active" IsChecked="True"
                                  Style="{StaticResource MaterialDesignCheckBox}" Margin="0,0,0,16"/>

                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="BtnSave" Style="{StaticResource MaterialDesignRaisedButton}"
                                    Click="BtnSave_Click" Margin="0,0,12,0" Height="40">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ContentSave" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="SAVE" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource MaterialDesignOutlinedButton}" Click="BtnCancel_Click" Height="40">
                                <TextBlock Text="CANCEL"/>
                            </Button>
                            <ProgressBar x:Name="ProgressSave" Style="{StaticResource MaterialDesignCircularProgressBar}"
                                         IsIndeterminate="True" Visibility="Collapsed" VerticalAlignment="Center"
                                         Width="28" Height="28" Margin="12,0,0,0"/>
                        </StackPanel>
                        <TextBlock x:Name="TxtMessage" FontSize="12" TextWrapping="Wrap" Margin="0,12,0,0" Visibility="Collapsed"/>
                    </StackPanel>
                </ScrollViewer>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>
