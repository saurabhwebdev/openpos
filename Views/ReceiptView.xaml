<Border x:Class="MyWinFormsApp.Views.ReceiptView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Background="White" CornerRadius="12"
        MinWidth="420" MaxWidth="500" MaxHeight="700">

    <DockPanel>
        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="{DynamicResource PrimaryHueMidBrush}"
                CornerRadius="12,12,0,0" Padding="24,16">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Receipt" Width="22" Height="22"
                                              Foreground="White" Margin="0,0,10,0"/>
                    <TextBlock Text="Receipt" FontSize="18" FontWeight="Bold" Foreground="White"/>
                </StackPanel>
                <Button HorizontalAlignment="Right"
                        Style="{StaticResource MaterialDesignIconForegroundButton}"
                        Foreground="White" Click="BtnClose_Click" Width="32" Height="32">
                    <materialDesign:PackIcon Kind="Close" Width="20" Height="20"/>
                </Button>
            </DockPanel>
        </Border>

        <!-- Action Buttons -->
        <Border DockPanel.Dock="Bottom" Padding="16,10"
                BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,1,0,0">
            <StackPanel>
                <!-- Share Buttons Row -->
                <WrapPanel HorizontalAlignment="Center" Margin="0,0,0,8">
                    <Button Click="BtnPrint_Click"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="0,0,8,0" Padding="12,6" Height="34" FontSize="12">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Printer" Width="16" Height="16"
                                                      VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="Print" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Click="BtnEmailInvoice_Click"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="0,0,8,0" Padding="12,6" Height="34" FontSize="12">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="EmailOutline" Width="16" Height="16"
                                                      VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="Email" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Click="BtnWhatsApp_Click"
                            Padding="12,6" Height="34" FontSize="12"
                            Background="#25D366" Foreground="White" BorderThickness="0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Whatsapp" Width="16" Height="16"
                                                      VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="WhatsApp" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </WrapPanel>

                <!-- Status text -->
                <TextBlock x:Name="TxtShareStatus" FontSize="11" HorizontalAlignment="Center"
                           TextWrapping="Wrap" Margin="0,0,0,6" Visibility="Collapsed"/>

                <!-- Close -->
                <Button Content="Close" Click="BtnClose_Click"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        HorizontalAlignment="Center" Padding="20,6" Height="32" FontSize="12"/>
            </StackPanel>
        </Border>

        <!-- Receipt Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Background="White">
            <StackPanel x:Name="ReceiptContent" Margin="32,20,32,20"/>
        </ScrollViewer>
    </DockPanel>
</Border>
