<Border x:Class="MyWinFormsApp.Views.ReceiptView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Background="White" CornerRadius="12"
        MinWidth="420" MaxWidth="500" MaxHeight="700">

    <DockPanel>
        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="{DynamicResource PrimaryHueMidBrush}"
                CornerRadius="12,12,0,0" Padding="24,16">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Receipt" Width="22" Height="22"
                                              Foreground="White" Margin="0,0,10,0"/>
                    <TextBlock Text="Receipt" FontSize="18" FontWeight="Bold" Foreground="White"/>
                </StackPanel>
                <Button HorizontalAlignment="Right"
                        Style="{StaticResource MaterialDesignIconForegroundButton}"
                        Foreground="White" Click="BtnClose_Click" Width="32" Height="32">
                    <materialDesign:PackIcon Kind="Close" Width="20" Height="20"/>
                </Button>
            </DockPanel>
        </Border>

        <!-- Action Buttons -->
        <Border DockPanel.Dock="Bottom" Padding="20,12"
                BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Print Receipt" Click="BtnPrint_Click"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Margin="0,0,12,0" Padding="20,8" Height="38">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Printer" Width="18" Height="18"
                                                          VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Print Receipt" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
                <Button Content="Close" Click="BtnClose_Click"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Padding="20,8" Height="38"/>
            </StackPanel>
        </Border>

        <!-- Receipt Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Background="White">
            <StackPanel x:Name="ReceiptContent" Margin="32,20,32,20"/>
        </ScrollViewer>
    </DockPanel>
</Border>
