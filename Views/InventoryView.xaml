<UserControl x:Class="MyWinFormsApp.Views.InventoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <DockPanel>
        <!-- Page Header + Tabs -->
        <StackPanel DockPanel.Dock="Top" Margin="40,32,40,0">
            <TextBlock Text="Inventory"
                       Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                       Margin="0,0,0,4"/>
            <TextBlock Text="Product catalog and stock management"
                       Style="{StaticResource MaterialDesignBody1TextBlock}"
                       Opacity="0.5" Margin="0,0,0,20"/>

            <!-- Tab buttons -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <Button x:Name="BtnTabProducts" Content="Products"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Click="BtnTabProducts_Click" FontSize="14" Padding="16,8"
                        Margin="0,0,4,0"/>
                <Button x:Name="BtnTabCategories" Content="Categories"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Click="BtnTabCategories_Click" FontSize="14" Padding="16,8"
                        Margin="0,0,4,0"/>
                <Button x:Name="BtnTabStock" Content="Stock"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Click="BtnTabStock_Click" FontSize="14" Padding="16,8"
                        Margin="0,0,4,0"/>
                <Button x:Name="BtnTabUnits" Content="Units"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Click="BtnTabUnits_Click" FontSize="14" Padding="16,8"/>
            </StackPanel>
            <Border Height="1" Background="{DynamicResource MaterialDesignDivider}"/>
        </StackPanel>

        <!-- Tab Content -->
        <ContentControl x:Name="InventoryContent"/>
    </DockPanel>
</UserControl>
