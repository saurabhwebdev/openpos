<UserControl x:Class="MyWinFormsApp.Views.SettingsGeneralView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="40,24,40,40">

            <!-- Appearance -->
            <materialDesign:Card Padding="24" UniformCornerRadius="12" Margin="0,0,0,16">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Left" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <materialDesign:PackIcon Kind="Brightness6" Width="20" Height="20"
                                                      VerticalAlignment="Center" Margin="0,0,10,0"
                                                      Opacity="0.7"/>
                            <TextBlock Text="Dark Mode"
                                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                        </StackPanel>
                        <TextBlock Text="Toggle between light and dark appearance"
                                   Style="{StaticResource MaterialDesignBody2TextBlock}"
                                   Opacity="0.5" Margin="30,0,0,0"/>
                    </StackPanel>
                    <ToggleButton DockPanel.Dock="Right"
                                  Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                  HorizontalAlignment="Right" VerticalAlignment="Center"
                                  IsChecked="{Binding IsDarkTheme}"/>
                </DockPanel>
            </materialDesign:Card>

            <!-- Database -->
            <materialDesign:Card Padding="24" UniformCornerRadius="12" Margin="0,0,0,16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <materialDesign:PackIcon Kind="Database" Width="20" Height="20"
                                                  VerticalAlignment="Center" Margin="0,0,10,0"
                                                  Opacity="0.7"/>
                        <TextBlock Text="Database"
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                    </StackPanel>

                    <TextBox x:Name="TxtConnectionString"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="Connection string"
                             IsReadOnly="True" TextWrapping="Wrap" FontSize="12"
                             Margin="0,0,0,16"/>

                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="BtnTestConnection"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Click="BtnTestConnection_Click" Margin="0,0,12,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="DatabaseCheck"
                                                          VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="TEST CONNECTION" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <ProgressBar x:Name="ProgressTest"
                                     Style="{StaticResource MaterialDesignCircularProgressBar}"
                                     IsIndeterminate="True" Visibility="Collapsed"
                                     VerticalAlignment="Center" Width="24" Height="24"/>
                    </StackPanel>

                    <materialDesign:Card x:Name="CardResult" Visibility="Collapsed"
                                         Padding="14" UniformCornerRadius="8" Margin="0,16,0,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon x:Name="IconResult" Kind="CheckCircle"
                                                      Width="22" Height="22"
                                                      VerticalAlignment="Top" Margin="0,0,10,0"/>
                            <TextBlock x:Name="TxtResult"
                                       Style="{StaticResource MaterialDesignBody2TextBlock}"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </materialDesign:Card>
                </StackPanel>
            </materialDesign:Card>

            <!-- About -->
            <materialDesign:Card Padding="24" UniformCornerRadius="12">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <materialDesign:PackIcon Kind="InformationOutline" Width="20" Height="20"
                                                  VerticalAlignment="Center" Margin="0,0,10,0"
                                                  Opacity="0.7"/>
                        <TextBlock Text="About"
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                    </StackPanel>
                    <TextBlock x:Name="TxtAbout"
                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                               Opacity="0.6" LineHeight="20"/>
                </StackPanel>
            </materialDesign:Card>
        </StackPanel>
    </ScrollViewer>
</UserControl>
