<UserControl x:Class="MyWinFormsApp.Views.DataManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                    Margin="40">

            <!-- Icon -->
            <Border Width="90" Height="90" CornerRadius="45"
                    HorizontalAlignment="Center" Margin="0,0,0,28">
                <Border.Background>
                    <SolidColorBrush Color="{DynamicResource Primary200}" Opacity="0.3"/>
                </Border.Background>
                <materialDesign:PackIcon Kind="DatabaseOutline" Width="44" Height="44"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"
                                          Foreground="{DynamicResource PrimaryHueMidBrush}"/>
            </Border>

            <!-- Title -->
            <TextBlock Text="Data Management"
                       Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                       HorizontalAlignment="Center" Margin="0,0,0,8"/>

            <!-- Coming Soon badge -->
            <Border Background="{DynamicResource PrimaryHueMidBrush}"
                    CornerRadius="12" Padding="16,6"
                    HorizontalAlignment="Center" Margin="0,0,0,16">
                <TextBlock Text="COMING SOON" FontSize="12" FontWeight="SemiBold"
                           Foreground="White"/>
            </Border>

            <!-- Description -->
            <TextBlock Text="CRUD operations, data grids, and record management&#x0a;are on the way. Check back soon."
                       Style="{StaticResource MaterialDesignBody1TextBlock}"
                       HorizontalAlignment="Center" Opacity="0.5"
                       TextAlignment="Center" MaxWidth="400" LineHeight="22"/>
        </StackPanel>
    </Grid>
</UserControl>
