<UserControl x:Class="MyWinFormsApp.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:views="clr-namespace:MyWinFormsApp.Views">

    <DockPanel>
        <!-- Page Header + Tabs -->
        <StackPanel DockPanel.Dock="Top" Margin="40,32,40,0">
            <TextBlock Text="Settings"
                       Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                       Margin="0,0,0,4"/>
            <TextBlock Text="Preferences and configuration"
                       Style="{StaticResource MaterialDesignBody1TextBlock}"
                       Opacity="0.5" Margin="0,0,0,20"/>

            <!-- Tab buttons -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <Button x:Name="BtnTabGeneral" Content="General"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Click="BtnTabGeneral_Click" FontSize="14" Padding="16,8"
                        Margin="0,0,4,0"/>
                <Button x:Name="BtnTabBusiness" Content="Business Details"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Click="BtnTabBusiness_Click" FontSize="14" Padding="16,8"
                        Margin="0,0,4,0"/>
                <Button x:Name="BtnTabRoles" Content="Roles &amp; Access"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Click="BtnTabRoles_Click" FontSize="14" Padding="16,8"
                        Margin="0,0,4,0"/>
                <Button x:Name="BtnTabTax" Content="Tax"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Click="BtnTabTax_Click" FontSize="14" Padding="16,8"
                        Margin="0,0,4,0"/>
                <Button x:Name="BtnTabEmail" Content="Email"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Click="BtnTabEmail_Click" FontSize="14" Padding="16,8"
                        Margin="0,0,4,0"/>
                <Button x:Name="BtnTabPayment" Content="Payments"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Click="BtnTabPayment_Click" FontSize="14" Padding="16,8"/>
            </StackPanel>
            <Border Height="1" Background="{DynamicResource MaterialDesignDivider}" Margin="0,0,0,0"/>
        </StackPanel>

        <!-- Tab Content -->
        <ContentControl x:Name="SettingsContent"/>
    </DockPanel>
</UserControl>
