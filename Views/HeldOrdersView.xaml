<Border x:Class="MyWinFormsApp.Views.HeldOrdersView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Background="{DynamicResource MaterialDesign.Brush.Card}"
        CornerRadius="12" MinWidth="550" MaxHeight="500">

    <DockPanel>
        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="#FF9800"
                CornerRadius="12,12,0,0" Padding="24,16">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="PauseCircleOutline" Width="22" Height="22"
                                              Foreground="White" Margin="0,0,10,0"/>
                    <TextBlock Text="Held Orders" FontSize="18" FontWeight="Bold" Foreground="White"/>
                </StackPanel>
                <Button HorizontalAlignment="Right"
                        Style="{StaticResource MaterialDesignIconForegroundButton}"
                        Foreground="White" Click="BtnClose_Click" Width="32" Height="32">
                    <materialDesign:PackIcon Kind="Close" Width="20" Height="20"/>
                </Button>
            </DockPanel>
        </Border>

        <TextBlock DockPanel.Dock="Top" Text="Tap an order to resume it in the cart."
                   FontSize="12" Opacity="0.5" Margin="24,10,24,0"/>

        <!-- Held Invoice List -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="16,8,16,16">
            <ItemsControl x:Name="HeldList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,6" Padding="14,12" CornerRadius="6"
                                Background="{DynamicResource MaterialDesign.Brush.Background}"
                                Cursor="Hand" MouseLeftButtonUp="HeldOrder_Click" Tag="{Binding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <DockPanel>
                                        <TextBlock Text="{Binding InvoiceNumber}" FontWeight="Medium" FontSize="13"/>
                                        <TextBlock Text="{Binding ItemCount, StringFormat=\{0\} items}"
                                                   FontSize="11" Opacity="0.5" Margin="10,0,0,0"
                                                   VerticalAlignment="Center"/>
                                    </DockPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                        <TextBlock Text="{Binding CustomerName}" FontSize="12" Opacity="0.6"/>
                                        <TextBlock Text=" Â· " FontSize="12" Opacity="0.4"/>
                                        <TextBlock Text="{Binding CreatedAt, StringFormat=\{0:hh:mm tt\}}"
                                                   FontSize="11" Opacity="0.5"/>
                                    </StackPanel>
                                </StackPanel>

                                <TextBlock Grid.Column="1" Text="{Binding FormattedTotal}"
                                           FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</Border>
