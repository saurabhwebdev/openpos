<UserControl x:Class="MyWinFormsApp.Views.InvoicesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <UserControl.Resources>
        <SolidColorBrush x:Key="AccentGreen" Color="#10B981"/>
        <SolidColorBrush x:Key="AccentRed" Color="#EF4444"/>
        <SolidColorBrush x:Key="AccentAmber" Color="#F59E0B"/>
    </UserControl.Resources>

    <DockPanel Margin="24,20">

        <!-- PAGE HEADER -->
        <DockPanel DockPanel.Dock="Top" Margin="0,0,0,20">
            <StackPanel DockPanel.Dock="Left" VerticalAlignment="Center">
                <TextBlock Text="Invoices" FontSize="24" FontWeight="Bold"/>
                <TextBlock x:Name="TxtSubheading" Text="All invoices generated from POS"
                           FontSize="13" Opacity="0.5" Margin="0,2,0,0"/>
            </StackPanel>
        </DockPanel>

        <!-- SUMMARY CARDS -->
        <Grid DockPanel.Dock="Top" Margin="0,0,0,18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Sales -->
            <Border Grid.Column="0" CornerRadius="12" Padding="18,14"
                    Background="{DynamicResource MaterialDesign.Brush.Card}">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" Opacity="0.05" ShadowDepth="2" Direction="270"/>
                </Border.Effect>
                <StackPanel>
                    <DockPanel>
                        <Border Background="#EEF2FF" CornerRadius="8" Padding="6" DockPanel.Dock="Left"
                                VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="CurrencyInr" Width="20" Height="20"
                                                      Foreground="#6366F1"/>
                        </Border>
                        <TextBlock x:Name="TxtTotalRevenue" Text="&#x20B9;0.00" FontSize="20" FontWeight="Bold"
                                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </DockPanel>
                    <TextBlock Text="Total Revenue" FontSize="11.5" Opacity="0.5" Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Completed -->
            <Border Grid.Column="2" CornerRadius="12" Padding="18,14"
                    Background="{DynamicResource MaterialDesign.Brush.Card}">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" Opacity="0.05" ShadowDepth="2" Direction="270"/>
                </Border.Effect>
                <StackPanel>
                    <DockPanel>
                        <Border Background="#ECFDF5" CornerRadius="8" Padding="6" DockPanel.Dock="Left"
                                VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="CheckCircleOutline" Width="20" Height="20"
                                                      Foreground="#10B981"/>
                        </Border>
                        <TextBlock x:Name="TxtCompletedCount" Text="0" FontSize="20" FontWeight="Bold"
                                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </DockPanel>
                    <TextBlock Text="Completed" FontSize="11.5" Opacity="0.5" Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Held -->
            <Border Grid.Column="4" CornerRadius="12" Padding="18,14"
                    Background="{DynamicResource MaterialDesign.Brush.Card}">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" Opacity="0.05" ShadowDepth="2" Direction="270"/>
                </Border.Effect>
                <StackPanel>
                    <DockPanel>
                        <Border Background="#FFFBEB" CornerRadius="8" Padding="6" DockPanel.Dock="Left"
                                VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="PauseCircleOutline" Width="20" Height="20"
                                                      Foreground="#F59E0B"/>
                        </Border>
                        <TextBlock x:Name="TxtHeldCount" Text="0" FontSize="20" FontWeight="Bold"
                                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </DockPanel>
                    <TextBlock Text="On Hold" FontSize="11.5" Opacity="0.5" Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Cancelled -->
            <Border Grid.Column="6" CornerRadius="12" Padding="18,14"
                    Background="{DynamicResource MaterialDesign.Brush.Card}">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" Opacity="0.05" ShadowDepth="2" Direction="270"/>
                </Border.Effect>
                <StackPanel>
                    <DockPanel>
                        <Border Background="#FEF2F2" CornerRadius="8" Padding="6" DockPanel.Dock="Left"
                                VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="CloseCircleOutline" Width="20" Height="20"
                                                      Foreground="#EF4444"/>
                        </Border>
                        <TextBlock x:Name="TxtCancelledCount" Text="0" FontSize="20" FontWeight="Bold"
                                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </DockPanel>
                    <TextBlock Text="Cancelled" FontSize="11.5" Opacity="0.5" Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- FILTERS BAR -->
        <Border DockPanel.Dock="Top" CornerRadius="12" Padding="16,12"
                Background="{DynamicResource MaterialDesign.Brush.Card}" Margin="0,0,0,14">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Date From -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="From" FontSize="12" Opacity="0.5" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <DatePicker x:Name="DpFrom" Width="140" FontSize="13"
                                materialDesign:HintAssist.Hint="Start date"
                                Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                SelectedDateChanged="Filter_SelectionChanged"/>
                </StackPanel>

                <!-- Date To -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="To" FontSize="12" Opacity="0.5" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <DatePicker x:Name="DpTo" Width="140" FontSize="13"
                                materialDesign:HintAssist.Hint="End date"
                                Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                SelectedDateChanged="Filter_SelectionChanged"/>
                </StackPanel>

                <!-- Status Filter -->
                <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Status" FontSize="12" Opacity="0.5" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox x:Name="CbStatus" Width="130" FontSize="13"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              SelectionChanged="Filter_SelectionChanged">
                        <ComboBoxItem Content="All" IsSelected="True" Tag="ALL"/>
                        <ComboBoxItem Content="Completed" Tag="COMPLETED"/>
                        <ComboBoxItem Content="On Hold" Tag="HELD"/>
                        <ComboBoxItem Content="Cancelled" Tag="CANCELLED"/>
                    </ComboBox>
                </StackPanel>

                <!-- Search -->
                <TextBox x:Name="TxtSearch" Grid.Column="6" Width="240"
                         materialDesign:HintAssist.Hint="Search invoice # or customer..."
                         materialDesign:TextFieldAssist.HasLeadingIcon="True"
                         materialDesign:TextFieldAssist.LeadingIcon="Magnify"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         FontSize="13" Padding="10,7"
                         TextChanged="TxtSearch_TextChanged"/>
            </Grid>
        </Border>

        <!-- INVOICE TABLE -->
        <Border CornerRadius="12" Background="{DynamicResource MaterialDesign.Brush.Card}">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" Opacity="0.05" ShadowDepth="2" Direction="270"/>
            </Border.Effect>
            <DockPanel>
                <!-- Table Header -->
                <Border DockPanel.Dock="Top" Padding="18,12"
                        BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Invoice #" FontSize="11.5" FontWeight="SemiBold" Opacity="0.5"/>
                        <TextBlock Grid.Column="1" Text="Date &amp; Time" FontSize="11.5" FontWeight="SemiBold" Opacity="0.5"/>
                        <TextBlock Grid.Column="2" Text="Customer" FontSize="11.5" FontWeight="SemiBold" Opacity="0.5"/>
                        <TextBlock Grid.Column="3" Text="Payment" FontSize="11.5" FontWeight="SemiBold" Opacity="0.5"/>
                        <TextBlock Grid.Column="4" Text="Items" FontSize="11.5" FontWeight="SemiBold" Opacity="0.5"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="5" Text="Status" FontSize="11.5" FontWeight="SemiBold" Opacity="0.5"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="6" Text="Total" FontSize="11.5" FontWeight="SemiBold" Opacity="0.5"
                                   HorizontalAlignment="Right"/>
                    </Grid>
                </Border>

                <!-- Invoice List -->
                <Grid>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="InvoiceList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="18,12" Cursor="Hand"
                                            MouseLeftButtonUp="Invoice_Click" Tag="{Binding Id}"
                                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                                            BorderThickness="0,0,0,0.5">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource MaterialDesign.Brush.Background}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="140"/>
                                                <ColumnDefinition Width="160"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="90"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="120"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Invoice Number -->
                                            <TextBlock Grid.Column="0" Text="{Binding InvoiceNumber}"
                                                       FontWeight="SemiBold" FontSize="13"
                                                       VerticalAlignment="Center"
                                                       Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                                            <!-- Date -->
                                            <TextBlock Grid.Column="1" Text="{Binding FormattedDate}"
                                                       FontSize="12" Opacity="0.7" VerticalAlignment="Center"/>

                                            <!-- Customer -->
                                            <TextBlock Grid.Column="2" FontSize="12.5"
                                                       VerticalAlignment="Center" TextTrimming="CharacterEllipsis">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="{Binding CustomerName}"/>
                                                        <Setter Property="Opacity" Value="0.8"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding CustomerName}" Value="">
                                                                <Setter Property="Text" Value="Walk-in"/>
                                                                <Setter Property="Opacity" Value="0.35"/>
                                                                <Setter Property="FontStyle" Value="Italic"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>

                                            <!-- Payment Method -->
                                            <TextBlock Grid.Column="3" Text="{Binding PaymentMethodDisplay}"
                                                       FontSize="12" Opacity="0.6" VerticalAlignment="Center"/>

                                            <!-- Item Count -->
                                            <TextBlock Grid.Column="4" Text="{Binding ItemCount}"
                                                       FontSize="12" Opacity="0.6" VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"/>

                                            <!-- Status Badge -->
                                            <Border Grid.Column="5" CornerRadius="6" Padding="8,3"
                                                    VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#ECFDF5"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="HELD">
                                                                <Setter Property="Background" Value="#FFFBEB"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="CANCELLED">
                                                                <Setter Property="Background" Value="#FEF2F2"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding StatusDisplay}" FontSize="10.5"
                                                           FontWeight="SemiBold">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#059669"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="HELD">
                                                                    <Setter Property="Foreground" Value="#D97706"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="CANCELLED">
                                                                    <Setter Property="Foreground" Value="#DC2626"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>

                                            <!-- Total -->
                                            <TextBlock Grid.Column="6" Text="{Binding FormattedTotal}"
                                                       FontSize="14" FontWeight="Bold" VerticalAlignment="Center"
                                                       HorizontalAlignment="Right"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Loading -->
                    <ProgressBar x:Name="ProgressLoad"
                                 Style="{StaticResource MaterialDesignCircularProgressBar}"
                                 IsIndeterminate="True" Visibility="Collapsed"
                                 HorizontalAlignment="Center" VerticalAlignment="Center"
                                 Width="40" Height="40"/>

                    <!-- Empty State -->
                    <StackPanel x:Name="PanelEmpty" Visibility="Collapsed"
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="ReceiptTextOutline" Width="52" Height="52"
                                                  Opacity="0.15" HorizontalAlignment="Center"/>
                        <TextBlock Text="No invoices found" FontSize="14" Opacity="0.3"
                                   HorizontalAlignment="Center" Margin="0,10,0,4"/>
                        <TextBlock Text="Invoices created from POS will appear here" FontSize="12"
                                   Opacity="0.2" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </DockPanel>
        </Border>
    </DockPanel>
</UserControl>
