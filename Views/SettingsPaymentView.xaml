<UserControl x:Class="MyWinFormsApp.Views.SettingsPaymentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="40,24,40,24">
        <StackPanel>

            <!-- Gateway Selection -->
            <Border CornerRadius="12" Padding="24,20"
                    Background="{DynamicResource MaterialDesign.Brush.Card}" Margin="0,0,0,16">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" Opacity="0.05" ShadowDepth="2" Direction="270"/>
                </Border.Effect>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <materialDesign:PackIcon Kind="CreditCardOutline" Width="22" Height="22"
                                                  VerticalAlignment="Center" Margin="0,0,10,0"
                                                  Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        <TextBlock Text="Payment Gateway" FontSize="16" FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Text="Select your payment gateway provider to configure API credentials."
                               FontSize="12" Opacity="0.5" Margin="0,0,0,14"/>

                    <!-- Row 1: Stripe, PayPal, Razorpay, Paytm -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="BtnStripe" Grid.Column="0" Height="68"
                                materialDesign:ButtonAssist.CornerRadius="10"
                                Click="BtnGateway_Click" Tag="Stripe"
                                HorizontalContentAlignment="Center">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                    <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}"/>
                                </Style>
                            </Button.Style>
                            <StackPanel HorizontalAlignment="Center">
                                <Image Width="28" Height="28" Margin="0,0,0,4" RenderOptions.BitmapScalingMode="HighQuality">
                                    <Image.Source>
                                        <BitmapImage UriSource="https://cdn.brandfetch.io/idxAg10C0L/w/400/h/400/theme/dark/icon.jpeg" DecodePixelWidth="28"/>
                                    </Image.Source>
                                </Image>
                                <TextBlock Text="Stripe" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnPayPal" Grid.Column="2" Height="68"
                                materialDesign:ButtonAssist.CornerRadius="10"
                                Click="BtnGateway_Click" Tag="PayPal"
                                HorizontalContentAlignment="Center">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                    <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}"/>
                                </Style>
                            </Button.Style>
                            <StackPanel HorizontalAlignment="Center">
                                <Image Width="28" Height="28" Margin="0,0,0,4" RenderOptions.BitmapScalingMode="HighQuality">
                                    <Image.Source>
                                        <BitmapImage UriSource="https://cdn.brandfetch.io/idLqSBC-bt/w/400/h/400/theme/dark/icon.jpeg" DecodePixelWidth="28"/>
                                    </Image.Source>
                                </Image>
                                <TextBlock Text="PayPal" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnRazorpay" Grid.Column="4" Height="68"
                                materialDesign:ButtonAssist.CornerRadius="10"
                                Click="BtnGateway_Click" Tag="Razorpay"
                                HorizontalContentAlignment="Center">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                    <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}"/>
                                </Style>
                            </Button.Style>
                            <StackPanel HorizontalAlignment="Center">
                                <Image Width="28" Height="28" Margin="0,0,0,4" RenderOptions.BitmapScalingMode="HighQuality">
                                    <Image.Source>
                                        <BitmapImage UriSource="https://cdn.brandfetch.io/id20mQyGeY/w/400/h/400/theme/dark/icon.jpeg" DecodePixelWidth="28"/>
                                    </Image.Source>
                                </Image>
                                <TextBlock Text="Razorpay" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnPaytm" Grid.Column="6" Height="68"
                                materialDesign:ButtonAssist.CornerRadius="10"
                                Click="BtnGateway_Click" Tag="Paytm"
                                HorizontalContentAlignment="Center">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                    <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}"/>
                                </Style>
                            </Button.Style>
                            <StackPanel HorizontalAlignment="Center">
                                <Image Width="28" Height="28" Margin="0,0,0,4" RenderOptions.BitmapScalingMode="HighQuality">
                                    <Image.Source>
                                        <BitmapImage UriSource="https://cdn.brandfetch.io/idXbCMm3yW/w/400/h/400/theme/dark/icon.jpeg" DecodePixelWidth="28"/>
                                    </Image.Source>
                                </Image>
                                <TextBlock Text="Paytm" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!-- Row 2: PhonePe, Square, Instamojo, Cashfree -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="BtnPhonePe" Grid.Column="0" Height="68"
                                materialDesign:ButtonAssist.CornerRadius="10"
                                Click="BtnGateway_Click" Tag="PhonePe"
                                HorizontalContentAlignment="Center">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                    <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}"/>
                                </Style>
                            </Button.Style>
                            <StackPanel HorizontalAlignment="Center">
                                <Image Width="28" Height="28" Margin="0,0,0,4" RenderOptions.BitmapScalingMode="HighQuality">
                                    <Image.Source>
                                        <BitmapImage UriSource="https://cdn.brandfetch.io/id2alue4LG/w/400/h/400/theme/dark/icon.jpeg" DecodePixelWidth="28"/>
                                    </Image.Source>
                                </Image>
                                <TextBlock Text="PhonePe" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnSquare" Grid.Column="2" Height="68"
                                materialDesign:ButtonAssist.CornerRadius="10"
                                Click="BtnGateway_Click" Tag="Square"
                                HorizontalContentAlignment="Center">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                    <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}"/>
                                </Style>
                            </Button.Style>
                            <StackPanel HorizontalAlignment="Center">
                                <Image Width="28" Height="28" Margin="0,0,0,4" RenderOptions.BitmapScalingMode="HighQuality">
                                    <Image.Source>
                                        <BitmapImage UriSource="https://cdn.brandfetch.io/idVfYwcuQz/w/400/h/400/theme/dark/icon.jpeg" DecodePixelWidth="28"/>
                                    </Image.Source>
                                </Image>
                                <TextBlock Text="Square" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnInstamojo" Grid.Column="4" Height="68"
                                materialDesign:ButtonAssist.CornerRadius="10"
                                Click="BtnGateway_Click" Tag="Instamojo"
                                HorizontalContentAlignment="Center">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                    <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}"/>
                                </Style>
                            </Button.Style>
                            <StackPanel HorizontalAlignment="Center">
                                <Image Width="28" Height="28" Margin="0,0,0,4" RenderOptions.BitmapScalingMode="HighQuality">
                                    <Image.Source>
                                        <BitmapImage UriSource="https://cdn.brandfetch.io/idR6NFbOML/w/400/h/400/theme/dark/icon.jpeg" DecodePixelWidth="28"/>
                                    </Image.Source>
                                </Image>
                                <TextBlock Text="Instamojo" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnCashfree" Grid.Column="6" Height="68"
                                materialDesign:ButtonAssist.CornerRadius="10"
                                Click="BtnGateway_Click" Tag="Cashfree"
                                HorizontalContentAlignment="Center">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                    <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}"/>
                                </Style>
                            </Button.Style>
                            <StackPanel HorizontalAlignment="Center">
                                <Image Width="28" Height="28" Margin="0,0,0,4" RenderOptions.BitmapScalingMode="HighQuality">
                                    <Image.Source>
                                        <BitmapImage UriSource="https://cdn.brandfetch.io/id6a8bFXxh/w/400/h/400/theme/dark/icon.jpeg" DecodePixelWidth="28"/>
                                    </Image.Source>
                                </Image>
                                <TextBlock Text="Cashfree" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <TextBlock x:Name="TxtSelectedGateway" Text="No gateway selected"
                               FontSize="12" Opacity="0.4" Margin="0,12,0,0"
                               HorizontalAlignment="Center" FontStyle="Italic"/>
                </StackPanel>
            </Border>

            <!-- API Credentials -->
            <Border CornerRadius="12" Padding="24,20"
                    Background="{DynamicResource MaterialDesign.Brush.Card}" Margin="0,0,0,16">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" Opacity="0.05" ShadowDepth="2" Direction="270"/>
                </Border.Effect>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <materialDesign:PackIcon Kind="KeyVariant" Width="22" Height="22"
                                                  VerticalAlignment="Center" Margin="0,0,10,0"
                                                  Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        <TextBlock Text="API Credentials" FontSize="16" FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock x:Name="TxtKeyLabel" Text="API Key / Client ID"
                               FontSize="11.5" Opacity="0.5" Margin="0,0,0,6"/>
                    <TextBox x:Name="TxtApiKey" Margin="0,0,0,14"
                             materialDesign:HintAssist.Hint="API Key / Client ID"
                             materialDesign:HintAssist.IsFloating="True"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             FontSize="13"/>

                    <TextBlock x:Name="TxtSecretLabel" Text="API Secret / Secret Key"
                               FontSize="11.5" Opacity="0.5" Margin="0,0,0,6"/>
                    <PasswordBox x:Name="TxtApiSecret" Margin="0,0,0,14"
                                 materialDesign:HintAssist.Hint="API Secret / Secret Key"
                                 materialDesign:HintAssist.IsFloating="True"
                                 Style="{StaticResource MaterialDesignOutlinedRevealPasswordBox}"
                                 FontSize="13"/>

                    <TextBox x:Name="TxtMerchantId" Margin="0,0,0,14"
                             materialDesign:HintAssist.Hint="Merchant ID (optional)"
                             materialDesign:HintAssist.IsFloating="True"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             FontSize="13"/>

                    <PasswordBox x:Name="TxtWebhookSecret" Margin="0,0,0,4"
                                 materialDesign:HintAssist.Hint="Webhook Secret (optional)"
                                 materialDesign:HintAssist.IsFloating="True"
                                 Style="{StaticResource MaterialDesignOutlinedRevealPasswordBox}"
                                 FontSize="13"/>
                </StackPanel>
            </Border>

            <!-- Configuration -->
            <Border CornerRadius="12" Padding="24,20"
                    Background="{DynamicResource MaterialDesign.Brush.Card}" Margin="0,0,0,16">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" Opacity="0.05" ShadowDepth="2" Direction="270"/>
                </Border.Effect>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <materialDesign:PackIcon Kind="Cog" Width="22" Height="22"
                                                  VerticalAlignment="Center" Margin="0,0,10,0"
                                                  Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        <TextBlock Text="Configuration" FontSize="16" FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Currency -->
                    <TextBlock Text="Currency" FontSize="11.5" Opacity="0.5" Margin="0,0,0,6"/>
                    <ComboBox x:Name="CmbCurrency" Margin="0,0,0,16"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              FontSize="13" Width="200" HorizontalAlignment="Left"
                              materialDesign:HintAssist.Hint="Currency"
                              materialDesign:HintAssist.IsFloating="True"/>

                    <!-- Test/Live Mode Toggle -->
                    <DockPanel Margin="0,0,0,16">
                        <StackPanel DockPanel.Dock="Left" VerticalAlignment="Center">
                            <TextBlock Text="Test / Sandbox Mode" FontSize="14" FontWeight="Medium"/>
                            <TextBlock Text="Use test credentials for development and testing"
                                       FontSize="11.5" Opacity="0.5" Margin="0,2,0,0"/>
                        </StackPanel>
                        <ToggleButton x:Name="ChkTestMode" DockPanel.Dock="Right"
                                      HorizontalAlignment="Right" IsChecked="True"
                                      Style="{StaticResource MaterialDesignSwitchToggleButton}"/>
                    </DockPanel>

                    <Border CornerRadius="8" Background="#FFF8E1" Padding="12,10" Margin="0,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="InformationOutline" Width="16" Height="16"
                                                      Foreground="#F57F17" VerticalAlignment="Top"
                                                      Margin="0,2,8,0"/>
                            <TextBlock TextWrapping="Wrap" FontSize="11.5" Foreground="#5D4037">
                                <Run FontWeight="SemiBold">Important:</Run>
                                <Run Text="Always test with sandbox/test credentials first. Switch to Live mode only when you are ready to accept real payments. Never share your secret keys."/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Enable + Save -->
            <Border CornerRadius="12" Padding="24,20"
                    Background="{DynamicResource MaterialDesign.Brush.Card}" Margin="0,0,0,16">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" Opacity="0.05" ShadowDepth="2" Direction="270"/>
                </Border.Effect>
                <StackPanel>
                    <DockPanel Margin="0,0,0,16">
                        <StackPanel DockPanel.Dock="Left" VerticalAlignment="Center">
                            <TextBlock Text="Enable Payment Gateway" FontSize="14" FontWeight="Medium"/>
                            <TextBlock Text="Accept online payments through the selected gateway"
                                       FontSize="11.5" Opacity="0.5" Margin="0,2,0,0"/>
                        </StackPanel>
                        <ToggleButton x:Name="ChkIsActive" DockPanel.Dock="Right"
                                      HorizontalAlignment="Right"
                                      Style="{StaticResource MaterialDesignSwitchToggleButton}"/>
                    </DockPanel>

                    <Button x:Name="BtnSave" Height="42"
                            materialDesign:ButtonAssist.CornerRadius="8"
                            Click="BtnSave_Click"
                            FontSize="13">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                <Setter Property="Background" Value="#10B981"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="#10B981"/>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ContentSave" Width="18" Height="18"
                                                      VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Save Gateway Settings" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <ProgressBar x:Name="ProgressBar"
                                 Style="{StaticResource MaterialDesignCircularProgressBar}"
                                 IsIndeterminate="True" Visibility="Collapsed"
                                 HorizontalAlignment="Center" Width="28" Height="28" Margin="0,12,0,0"/>

                    <TextBlock x:Name="TxtStatus" FontSize="12" Margin="0,10,0,0"
                               HorizontalAlignment="Center" TextWrapping="Wrap"
                               Visibility="Collapsed"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
