<UserControl x:Class="MyWinFormsApp.Views.BusinessDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="40,24,40,40">

            <!-- CARD 1: Business Information -->
            <materialDesign:Card Padding="24" UniformCornerRadius="12" Margin="0,0,0,16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <materialDesign:PackIcon Kind="StorefrontOutline" Width="20" Height="20"
                                                  VerticalAlignment="Center" Margin="0,0,10,0" Opacity="0.7"/>
                        <TextBlock Text="Business Information"
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                    </StackPanel>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBox x:Name="TxtBusinessName" Grid.Row="0" Grid.Column="0"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Business / Shop Name"
                                 FontSize="14" Margin="0,0,0,12"/>

                        <ComboBox x:Name="CmbBusinessType" Grid.Row="0" Grid.Column="2"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  materialDesign:HintAssist.Hint="Business Type"
                                  FontSize="14" Margin="0,0,0,12" IsEditable="True">
                            <ComboBoxItem Content="Retail Store"/>
                            <ComboBoxItem Content="Restaurant / Cafe"/>
                            <ComboBoxItem Content="Grocery"/>
                            <ComboBoxItem Content="Pharmacy"/>
                            <ComboBoxItem Content="Electronics"/>
                            <ComboBoxItem Content="Clothing / Fashion"/>
                            <ComboBoxItem Content="Salon / Spa"/>
                            <ComboBoxItem Content="Hardware"/>
                            <ComboBoxItem Content="General Store"/>
                            <ComboBoxItem Content="Other"/>
                        </ComboBox>

                        <TextBox x:Name="TxtOwnerName" Grid.Row="1" Grid.Column="0"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Owner / Proprietor Name"
                                 FontSize="14" Margin="0,0,0,12"/>

                        <TextBox x:Name="TxtEmail" Grid.Row="1" Grid.Column="2"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Business Email"
                                 FontSize="14" Margin="0,0,0,12"/>

                        <TextBox x:Name="TxtPhone" Grid.Row="2" Grid.Column="0"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Phone Number"
                                 FontSize="14" Margin="0,0,0,12"/>

                        <TextBox x:Name="TxtWebsite" Grid.Row="2" Grid.Column="2"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Website (optional)"
                                 FontSize="14" Margin="0,0,0,12"/>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>

            <!-- CARD 2: Address -->
            <materialDesign:Card Padding="24" UniformCornerRadius="12" Margin="0,0,0,16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <materialDesign:PackIcon Kind="MapMarkerOutline" Width="20" Height="20"
                                                  VerticalAlignment="Center" Margin="0,0,10,0" Opacity="0.7"/>
                        <TextBlock Text="Address"
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                    </StackPanel>

                    <TextBox x:Name="TxtAddress1"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="Address Line 1"
                             FontSize="14" Margin="0,0,0,12"/>

                    <TextBox x:Name="TxtAddress2"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="Address Line 2 (optional)"
                             FontSize="14" Margin="0,0,0,12"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBox x:Name="TxtCity" Grid.Row="0" Grid.Column="0"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="City"
                                 FontSize="14" Margin="0,0,0,12"/>

                        <TextBox x:Name="TxtState" Grid.Row="0" Grid.Column="2"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="State / Region"
                                 FontSize="14" Margin="0,0,0,12"/>

                        <ComboBox x:Name="CmbCountry" Grid.Row="1" Grid.Column="0"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  materialDesign:HintAssist.Hint="Country"
                                  FontSize="14" Margin="0,0,0,12" IsEditable="True">
                            <ComboBoxItem Content="India" IsSelected="True"/>
                            <ComboBoxItem Content="United States"/>
                            <ComboBoxItem Content="United Kingdom"/>
                            <ComboBoxItem Content="Canada"/>
                            <ComboBoxItem Content="Australia"/>
                            <ComboBoxItem Content="Singapore"/>
                            <ComboBoxItem Content="UAE"/>
                            <ComboBoxItem Content="Nepal"/>
                            <ComboBoxItem Content="Bangladesh"/>
                            <ComboBoxItem Content="Sri Lanka"/>
                        </ComboBox>

                        <TextBox x:Name="TxtPostalCode" Grid.Row="1" Grid.Column="2"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Postal / ZIP Code"
                                 FontSize="14" Margin="0,0,0,12"/>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>

            <!-- CARD 3: Tax & Registration -->
            <materialDesign:Card Padding="24" UniformCornerRadius="12" Margin="0,0,0,16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <materialDesign:PackIcon Kind="FileDocumentOutline" Width="20" Height="20"
                                                  VerticalAlignment="Center" Margin="0,0,10,0" Opacity="0.7"/>
                        <TextBlock Text="Tax &amp; Registration"
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                    </StackPanel>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="TxtGstin" Grid.Column="0"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="GSTIN"
                                 FontSize="14" Margin="0,0,0,12"/>

                        <TextBox x:Name="TxtPan" Grid.Column="2"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="PAN"
                                 FontSize="14" Margin="0,0,0,12"/>

                        <TextBox x:Name="TxtRegNo" Grid.Column="4"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Business Reg. No. (optional)"
                                 FontSize="14" Margin="0,0,0,12"/>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>

            <!-- CARD 4: Currency -->
            <materialDesign:Card Padding="24" UniformCornerRadius="12" Margin="0,0,0,16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <materialDesign:PackIcon Kind="CurrencyInr" Width="20" Height="20"
                                                  VerticalAlignment="Center" Margin="0,0,10,0" Opacity="0.7"/>
                        <TextBlock Text="Currency"
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                    </StackPanel>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ComboBox x:Name="CmbCurrency" Grid.Column="0"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  materialDesign:HintAssist.Hint="Currency"
                                  FontSize="14" Margin="0,0,0,12"
                                  SelectionChanged="CmbCurrency_SelectionChanged">
                            <ComboBoxItem Content="INR - Indian Rupee (₹)" Tag="INR|₹" IsSelected="True"/>
                            <ComboBoxItem Content="USD - US Dollar ($)" Tag="USD|$"/>
                            <ComboBoxItem Content="EUR - Euro (€)" Tag="EUR|€"/>
                            <ComboBoxItem Content="GBP - British Pound (£)" Tag="GBP|£"/>
                            <ComboBoxItem Content="AED - UAE Dirham (د.إ)" Tag="AED|د.إ"/>
                            <ComboBoxItem Content="SGD - Singapore Dollar (S$)" Tag="SGD|S$"/>
                            <ComboBoxItem Content="CAD - Canadian Dollar (C$)" Tag="CAD|C$"/>
                            <ComboBoxItem Content="AUD - Australian Dollar (A$)" Tag="AUD|A$"/>
                            <ComboBoxItem Content="NPR - Nepalese Rupee (रू)" Tag="NPR|रू"/>
                            <ComboBoxItem Content="BDT - Bangladeshi Taka (৳)" Tag="BDT|৳"/>
                            <ComboBoxItem Content="LKR - Sri Lankan Rupee (Rs)" Tag="LKR|Rs"/>
                        </ComboBox>

                        <TextBox x:Name="TxtCurrencySymbol" Grid.Column="2"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Currency Symbol"
                                 FontSize="14" Margin="0,0,0,12" IsReadOnly="True"/>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>

            <!-- CARD 5: Bank Details -->
            <materialDesign:Card Padding="24" UniformCornerRadius="12" Margin="0,0,0,16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <materialDesign:PackIcon Kind="BankOutline" Width="20" Height="20"
                                                  VerticalAlignment="Center" Margin="0,0,10,0" Opacity="0.7"/>
                        <TextBlock Text="Bank Details"
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                    </StackPanel>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBox x:Name="TxtBankAccountHolder" Grid.Row="0" Grid.Column="0"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Account Holder Name"
                                 FontSize="14" Margin="0,0,0,12"/>

                        <TextBox x:Name="TxtBankAccountNo" Grid.Row="0" Grid.Column="2"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Account Number"
                                 FontSize="14" Margin="0,0,0,12"/>

                        <TextBox x:Name="TxtBankName" Grid.Row="1" Grid.Column="0"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Bank Name"
                                 FontSize="14" Margin="0,0,0,12"/>

                        <TextBox x:Name="TxtBankBranch" Grid.Row="1" Grid.Column="2"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Branch"
                                 FontSize="14" Margin="0,0,0,12"/>

                        <TextBox x:Name="TxtBankIfsc" Grid.Row="2" Grid.Column="0"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="IFSC Code"
                                 FontSize="14" Margin="0,0,0,12"/>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>

            <!-- CARD 6: UPI Details -->
            <materialDesign:Card Padding="24" UniformCornerRadius="12" Margin="0,0,0,16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <materialDesign:PackIcon Kind="CellphoneNfc" Width="20" Height="20"
                                                  VerticalAlignment="Center" Margin="0,0,10,0" Opacity="0.7"/>
                        <TextBlock Text="UPI Details"
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                    </StackPanel>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="TxtUpiId" Grid.Column="0"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="UPI ID (e.g. shop@upi)"
                                 FontSize="14" Margin="0,0,0,12"/>

                        <TextBox x:Name="TxtUpiName" Grid.Column="2"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="UPI Display Name"
                                 FontSize="14" Margin="0,0,0,12"/>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>

            <!-- CARD 7: Invoice Settings -->
            <materialDesign:Card Padding="24" UniformCornerRadius="12" Margin="0,0,0,16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <materialDesign:PackIcon Kind="ReceiptTextOutline" Width="20" Height="20"
                                                  VerticalAlignment="Center" Margin="0,0,10,0" Opacity="0.7"/>
                        <TextBlock Text="Invoice Settings"
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                    </StackPanel>

                    <TextBox x:Name="TxtInvoicePrefix"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="Invoice Prefix (e.g. INV-, BILL-)"
                             FontSize="14" Margin="0,0,0,12"/>

                    <TextBox x:Name="TxtInvoiceFooter"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="Invoice Footer Note (e.g. Thank you for your business!)"
                             FontSize="14" Margin="0,0,0,12"
                             TextWrapping="Wrap" MinHeight="60"
                             AcceptsReturn="True"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- Save Button -->
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <Button x:Name="BtnSave"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Click="BtnSave_Click" Margin="0,0,12,0" Height="40">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ContentSave" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="SAVE BUSINESS DETAILS" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <ProgressBar x:Name="ProgressSave"
                             Style="{StaticResource MaterialDesignCircularProgressBar}"
                             IsIndeterminate="True" Visibility="Collapsed"
                             VerticalAlignment="Center" Width="28" Height="28"/>
            </StackPanel>

            <TextBlock x:Name="TxtMessage" FontSize="12"
                       TextWrapping="Wrap" Margin="0,12,0,0"
                       Visibility="Collapsed"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
