<Border x:Class="MyWinFormsApp.Views.InvoiceHistoryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Background="{DynamicResource MaterialDesign.Brush.Card}"
        CornerRadius="12" MinWidth="750" MaxHeight="620">

    <DockPanel>
        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="{DynamicResource PrimaryHueMidBrush}"
                CornerRadius="12,12,0,0" Padding="24,16">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="History" Width="22" Height="22"
                                              Foreground="White" Margin="0,0,10,0"/>
                    <TextBlock Text="Today's Sales" FontSize="18" FontWeight="Bold" Foreground="White"/>
                    <TextBlock x:Name="TxtSalesCount" FontSize="13" Foreground="White" Opacity="0.7"
                               VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
                <Button HorizontalAlignment="Right"
                        Style="{StaticResource MaterialDesignIconForegroundButton}"
                        Foreground="White" Click="BtnClose_Click" Width="32" Height="32">
                    <materialDesign:PackIcon Kind="Close" Width="20" Height="20"/>
                </Button>
            </DockPanel>
        </Border>

        <!-- Invoice List -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="16,12,16,16">
            <StackPanel>
                <ItemsControl x:Name="InvoiceList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,0,6" Padding="14,10" CornerRadius="6"
                                    Background="{DynamicResource MaterialDesign.Brush.Background}"
                                    Cursor="Hand" MouseLeftButtonUp="Invoice_Click" Tag="{Binding Id}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="90"/>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding InvoiceNumber}" FontWeight="Medium" FontSize="13"/>
                                        <TextBlock Text="{Binding CreatedAt, StringFormat=\{0:hh:mm tt\}}"
                                                   FontSize="11" Opacity="0.5"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="1" Text="{Binding CustomerName}" FontSize="12"
                                               Opacity="0.7" VerticalAlignment="Center"
                                               TextTrimming="CharacterEllipsis"/>

                                    <TextBlock Grid.Column="2" Text="{Binding PaymentMethodDisplay}"
                                               FontSize="12" Opacity="0.6" VerticalAlignment="Center"/>

                                    <!-- Status badge -->
                                    <Border Grid.Column="3" CornerRadius="4" Padding="6,2"
                                            VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#E8F5E9"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="HELD">
                                                        <Setter Property="Background" Value="#FFF3E0"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="CANCELLED">
                                                        <Setter Property="Background" Value="#FFEBEE"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding StatusDisplay}" FontSize="10" FontWeight="Medium">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#2E7D32"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="HELD">
                                                            <Setter Property="Foreground" Value="#E65100"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="CANCELLED">
                                                            <Setter Property="Foreground" Value="#C62828"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>

                                    <TextBlock Grid.Column="4" Text="{Binding FormattedTotal}"
                                               FontSize="14" FontWeight="Bold" VerticalAlignment="Center"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <ProgressBar x:Name="ProgressLoad"
                             Style="{StaticResource MaterialDesignCircularProgressBar}"
                             IsIndeterminate="True" Visibility="Collapsed"
                             HorizontalAlignment="Center" Width="32" Height="32" Margin="0,20,0,0"/>

                <TextBlock x:Name="TxtEmpty" Text="No sales today."
                           FontSize="13" Opacity="0.4" HorizontalAlignment="Center"
                           Margin="0,20,0,0" Visibility="Collapsed"/>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Border>
